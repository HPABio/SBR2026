---
import NanoBananaImg from "@/assets/ExportWP/venue/BetonhalleWelcomeSBR2026-NanoBanana.jpeg";
import BubbleButton from "@/components/ui/BubbleButton.astro";
import LaurelWreath from "@/components/ui/LaurelWreath.astro";
import WinnerLaurel from "@/components/ui/winner-laurel.astro";
---

<!-- Container -->
<section
    class="relative w-full min-h-screen lg:min-h-[1000px] px-4 md:px-12 mt-32 flex flex-col items-center justify-center overflow-hidden">
    <!-- Content Container -->
    <div
        class="max-w-sm sm:max-w-lg lg:max-w-7xl mx-auto w-full grid lg:grid-cols-2 gap-12 items-center relative z-10 mb-32 -mt-32"
    >
        <!-- Text Side -->
        <div
            class=" -mt-[300px] lg:mt-0 flex flex-col items-end text-right space-y-2 order-2 lg:order-1"
        >
            <div class="space-y-2">
                <div class="flex flex-col items-start lg:items-end">
                    <div class="h-1 w-24 bg-[#F49B2B] rounded-full mb-8 lg:mb-4 xl:mb-6"></div>
                    <h2
                        class="text-4xl md:text-7xl lg:text-6xl font-anton font-black uppercase tracking-tight text-left lg:text-right"
                    >
                        Looking for a<br class="" />chance <br class="lg:hidden" />
                        <span class="text-[#F49B2B] text-8xl lg:text-6xl">to pitch
                        </span>?
                        <p class="lg:hidden block text-base text-muted-foreground capitalize tracking-widest
                        font-quicksand font-thin max-w-md leading-none text-left lg:text-right mt-2">
                            Take the stage and showcase your innovation.
                            Connect with investors, industry leaders, and peers in an electrifying
                            atmosphere.
                        </p>
                    </h2>
                </div>
            </div>

            <p
                class="hidden lg:block text-base text-muted-foreground font-quicksand font-thin max-w-md leading-none tracking-widest text-right"
            >
                Take the stage and showcase your innovation.
                Connect with investors, industry leaders, and peers in an electrifying
                atmosphere.
            </p>

            <div class="relative pt-10 lg:pt-8 pr-4 mx-auto lg:mx-0 ">
                <LaurelWreath
                    color="#F49B2B"
                    class="block lg:hidden w-24 lg:w-32 absolute top-4 -right-4 lg:-right-8 opacity-80 rotate-20"
                />
                <BubbleButton
                    text="Pitching Contest"
                    icon="hidden"
                    href="/pitchPerfect"
                    class="rounded-md"
                    textClass="text-6xl lg:text-3xl px-2 py-2 font-anton uppercase tracking-tight"
                />
            </div>
        </div>

        <!-- Image Side -->
        <div
            class="relative w-2/3 h-full items-center justify-center hidden lg:flex
            lg:aspect-4/3 rounded-2xl shadow-none skew-y-3 lg:skew-y-0 lg:rotate-3 
            hover:rotate-10 transition-transform duration-700 ease-out group order-1 lg:order-2 overflow-visible"
        >
            <div
                class="absolute inset-0 bg-primary/0 mix-blend-overlay z-10 pointer-events-none group-hover:bg-transparent transition-colors duration-500 "
            >
            </div>
            <WinnerLaurel classes="group-hover:scale-[1.1] duration-500"/>
            <img
                src={NanoBananaImg.src}
                alt="Nano Banana Pro Pitch Event"
                class="hidden h-full object-cover"
            />
        </div>
    </div>


    <!-- Background Decoration -->
    <div
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-br from-[#F49B2B]/5 to-transparent -z-10 blur-3xl pointer-events-none rounded-[100%]"
    >
    </div>
</section>
