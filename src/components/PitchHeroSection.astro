---
import video from "@/assets/pitching_session/PitchingVideo_Example_SBR2026.mp4";
import LaurelWreath from '@/components/ui/LaurelWreath.astro';
import { Button } from '@/components/ui/button';
import { MapPin, Calendar } from "lucide-react";
---

<section class="pt-44 pb-20 px-4 lg:px-8 relative">
  <!-- Absolute inset image for background -->
  <div class="fade-video-wrapper absolute w-full h-full -z-10">
    <video
      src={video}
      autoplay
      loop
      muted
      playsinline
      class="w-full h-full object-cover no-repeat scale-[1.75] fade-in"
      aria-hidden="true"
      draggable="false"
    />
  </div>
  
  <!-- Gradient overlay from bottom (background) to top (transparent) -->
  <div class="absolute inset-0 bg-linear-to-t from-background via-background/70 to-background pointer-events-none" />
  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="text-center space-y-0">
      <div class=" flex justify-center ">
        <LaurelWreath color="#F49B2B" class="w-14 "/> 
      </div>
      <div class="-mt-1">
        <span class="text-[0.6rem] text-muted-foreground font-quicksand font-light uppercase tracking-widest">StartUp x Investor Summit</span>
      </div>
      <h1 class="font-anton font-black uppercase text-balance tracking-tight leading-none mt-2">
        <span class="font-background text-8xl md:text-9xl xl:text-[180px] text-foreground inline-block">
          SYNBIO
        </span>
      </h1>
      <h1 class="text-[2.5rem] md:text-7xl font-anton font-black uppercase text-balance leading-tight xl:-mt-4">
        STARTUP {' '}
        <span class="font-background font-black text-primary">
          PITCHES</span>
      </h1>
      <p class="text-[0.7rem] md:text-sm font-quicksand font-medium text-muted-foreground max-w-2xl md:max-w-3xl mx-auto text-balance leading-4 md:leading-4.5 tracking-wide">
        Present your groundbreaking synthetic biology innovation to leading investors and industry experts at
        Berlin's premier biotech summit
      </p>
      <div class="flex flex-row items-center justify-center gap-4 pt-4 mt-6">
        <!-- 
          The likely issue is that Astro's <Button> component is server-rendered and
          client:load only applies to React/Vue/Svelte components, not simple Astro/JSX wrappers.
          If your Button is a wrapper around a native <button>, it will NOT have the JS loaded 
          unless it's from a UI framework and wrapped with client:load **and** able to run on the client.

          If Button does not forward the onClick and is not a client component, use a native <a> or <button> directly.
        -->
        <a
          href="https://docs.google.com/forms/d/e/1FAIpQLSf3tJKhQo14tXnFDYWuHBFJ8qulqv55lQZBlpq7G1ZvB4ukLg/viewform?pli=1"
          class="inline-flex items-center justify-center rounded-md bg-primary px-8 py-3 text-lg font-semibold text-primary-foreground shadow transition-colors hover:bg-primary/90"
          target="_blank"
          rel="noopener noreferrer"
        >
          Apply Now
        </a>
        <Button
          size="lg"
          variant="outline"
          className="border-2 border-border hover:bg-card font-semibold text-lg px-8 bg-transparent"
          onClick={() => { window.location.href = "mailto:sbr@ga-sb.de"; }}
          client:load
        >
          Contact Us
        </Button>
      </div>
      <div class="flex items-center justify-center gap-8 pt-4 text-sm text-muted-foreground">
        <div class="flex items-center gap-2">
          <MapPin className="w-4 h-4 text-primary" client:load />
          <span>Silent Green, Berlin, Germany</span>
        </div>
        <div class="flex items-center gap-2">
          <Calendar className="w-4 h-4 text-primary" client:load />
          <span>Jan 19th-20th, 2026</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .fade-in {
    opacity: 0;
    animation: fadeInVideo 2s ease-in forwards;
  }
  @keyframes fadeInVideo {
    to { opacity: 1; }
  }
</style>
