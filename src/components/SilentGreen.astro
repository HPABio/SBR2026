---
// import SBROrangeWaveBG from "@/assets/ExportWP/SBR_Orange_Wave_BG.png";
// Silent Green Section Component
import SBROrangeWaveBG from '@/assets/ExportWP/bgImages/SBR_OrangeWave_BG.png';
import { Image } from 'astro:assets';
---

<section 
	class="relative px-14  overflow-hidden">
	<Image src={SBROrangeWaveBG} alt="Orange Wave Background" class="w-full h-full object-cover object-top absolute inset-0 z-0" />
	<div class="container mx-auto max-w-7xl px-4 lg:px-8 py-16 lg:py-24 relative z-0 mt-[260px] lg:mt-[300px]">
		{/* Main content container */}
		<div class="flex flex-col items-center space-y-8 lg:space-y-12">
			{/* Spacer */}
			<div class="h-8 lg:h-16"></div>

            
			{/* We Are Back Heading */}
			<h2 class="text-5xl lg:text-6xl font-bold text-background uppercase tracking-widest text-center">
                We Are Back at
			</h2>
            
            {/* Silent Green Logo */}
            <div class="flex justify-center">
                <img 
                    src="@/assets/ExportWP/silent-green-logo-1024x601.png" 
                    alt="Silent Green Logo" 
                    class="h-auto w-full max-w-xs"
                    loading="lazy"
                />
            </div>
<!-- 
			{/* Subheading */}
			<h2 class="text-xl lg:text-2xl text-white text-center">
				- at silent green in Berlin with -
			</h2> -->

			{/* Spacer */}
			<div class="h-8 lg:h-12"></div>

			{/* Workshops Section */}
			<div class="w-full flex flex-col items-center space-y-6 lg:space-y-8">
				{/* Spacer */}
				<div class="h-4 lg:h-8"></div>

				{/* Workshops Heading */}
				<h2 class="text-2xl lg:text-3xl font-bold text-white text-center uppercase tracking-wide">
					WORKSHOPS & FIRE SIDE CHATS
				</h2>

				{/* Workshops Subheading */}
				<h2 class="text-lg lg:text-xl text-white text-center">
					- partake in great interactive sessions in <span class="italic">5 ateliers -</span>
				</h2>

				{/* Divider */}
				<div class="w-24 h-px bg-white/30 my-4"></div>

				{/* Ateliers Image */}
				<div class="flex justify-center w-full">
					<img 
						src="@/assets/ExportWP/Ateliers-blue-print-white-1024x267.png" 
						alt="5 Ateliers" 
						class="max-w-full h-auto w-full max-w-4xl"
						loading="lazy"
					/>
				</div>
			</div>

			{/* Grid Sections */}
			<div class="w-full space-y-8 lg:space-y-12 mt-8 lg:mt-12">
				{/* Grid Item 1: Get Your Questions Answered */}
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 items-center">
					<div class="order-2 lg:order-1">
						<img 
							src="@/assets/ExportWP/Background_SBR_3_SW-scaled-e1756694299338-1024x570.jpg" 
							alt="SynBio Reactor Summit" 
							class="w-full h-auto rounded-lg object-cover"
							loading="lazy"
						/>
					</div>
					<div class="order-1 lg:order-2 flex items-center justify-center lg:justify-start">
						<h2 class="text-2xl lg:text-3xl font-bold text-white text-center lg:text-left">
							Get Your Questions Answered By Experts Of The Field
						</h2>
					</div>
				</div>

				{/* Grid Item 2: Dive Into The Journey */}
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 items-center">
					<div class="flex items-center justify-center lg:justify-start">
						<h2 class="text-2xl lg:text-3xl font-bold text-white text-center lg:text-left">
							Dive Into<br class="hidden lg:block" />The Journey Of Other Founders
						</h2>
					</div>
					<div>
						<img 
							src="@/assets/ExportWP/Background_SBR_2_SW-scaled-e1756694273957-1024x572.jpg" 
							alt="SynBio Reactor Summit" 
							class="w-full h-auto rounded-lg object-cover"
							loading="lazy"
						/>
					</div>
				</div>

				{/* Grid Item 3: Meet SynBio Enthusiasts */}
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 items-center">
					<div class="order-2 lg:order-1">
						<img 
							src="@/assets/ExportWP/Background_SBR_1_SW-scaled-e1756695208600-1024x556.jpg" 
							alt="SynBio Reactor Summit" 
							class="w-full h-auto rounded-lg object-cover"
							loading="lazy"
						/>
					</div>
					<div class="order-1 lg:order-2 flex items-center justify-center lg:justify-start">
						<h2 class="text-2xl lg:text-3xl font-bold text-white text-center lg:text-left">
							Meet SynBio Enthusiasts From<br class="hidden lg:block" />All Over Europe
						</h2>
					</div>
				</div>
			</div>

			{/* Bottom Spacer */}
			<div class="h-8 lg:h-16"></div>
		</div>
	</div>
</section>

