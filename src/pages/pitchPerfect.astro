---
import Layout from '@/layouts/main.astro';
import Navigation from '@/components/Navigation.astro';
import { PitchForm } from '@/components/pitch-form';
import {
	HeroSection,
	StatsSection,
	BenefitsSection,
	JudgesSection,
	CTASection,
	Footer
} from '@/components/pitch-perfect-sections';
---

<Layout content={{ title: "Pitch Perfect - SynBio Reactor Summit 2026" }}>
	<Navigation />
		<HeroSection client:load />
		<StatsSection client:load />
		<BenefitsSection client:load />
		<JudgesSection client:load />

		{/* Application Form Section */}
		<section class="py-20 px-4 lg:px-8">
			<div class="container mx-auto max-w-3xl">
				<div class="text-center space-y-4 mb-12">
					<h2 class="text-4xl md:text-5xl font-bold text-balance">
						Ready to <span class="text-primary">Take the Stage?</span>
					</h2>
					<p class="text-xl text-muted-foreground text-balance">
						Applications close December 15, 2025. Limited spots available.
					</p>
				</div>

				<PitchForm client:load />
			</div>
		</section>

		<CTASection client:load />
		<Footer client:load />
</Layout>
