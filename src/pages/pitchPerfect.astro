---
import '@/styles/global.css';
import Navigation from '@/components/Navigation.astro';
import { PitchForm } from '@/components/pitch-form';
import {
  HeroSection,
  StatsSection,
  BenefitsSection,
  JudgesSection,
  CTASection,
  Footer,
} from '@/components/pitch-perfect-sections';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/Assets/WP_SynBioReactor_Summit_2026_files/cropped-SBR2025-Favicon-1-60x60.png" />
		<meta name="generator" content={Astro.generator} />
		<title>Pitch Perfect - SynBio Reactor Summit 2026</title>
		<meta name="description" content="Pitch your synthetic biology startup at Berlin's premier StartUp x Investor Summit" />
	</head>

	<body class="min-h-screen bg-background">
		<Navigation />
		
		<HeroSection client:load />
		<StatsSection client:load />
		<BenefitsSection client:load />
		<JudgesSection client:load />

		{/* Application Form Section */}
		<section class="py-20 px-4 lg:px-8">
			<div class="container mx-auto max-w-3xl">
				<div class="text-center space-y-4 mb-12">
					<h2 class="text-4xl md:text-5xl font-bold text-balance">
						Ready to <span class="text-primary">Take the Stage?</span>
					</h2>
					<p class="text-xl text-muted-foreground text-balance">
						Applications close December 15, 2025. Limited spots available.
					</p>
				</div>

				<PitchForm client:load />
			</div>
		</section>

		<CTASection client:load />
		<Footer client:load />
	</body>
</html>
