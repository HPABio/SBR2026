---
import Layout from '@/layouts/main.astro';
import Navigation from '@/components/Navigation.astro';
import { PitchForm } from '@/components/pitch-form';
import WinnerLaurel from '@/components/ui/winner-laurel.astro';
import {
	HeroSection,
	StatsSection,
	BenefitsSection,
	JudgesSection,
	CTASection,
	Footer
} from '@/components/pitch-perfect-sections';
import PitchHeroSection from '@/components/PitchHeroSection.astro';
import PitchStatsSection from '@/components/PitchStatsSection.astro';
import PitchBenefitsSection from '@/components/PitchBenefitsSection.astro';
import PitchJudgesSection from '@/components/PitchJudgesSection.astro';
import PitchCTASection from '@/components/PitchCTASection.astro';
---

<Layout content={{ title: "Pitch Perfect - SynBio Reactor Summit 2026" }}>
	<Navigation />
		<PitchHeroSection />
		<div class="p-12 bg-background">
			<PitchStatsSection />
		</div>
		<PitchBenefitsSection />
		<PitchJudgesSection classes="hidden" />

		{/* Application Form Section */}
		<section class="hidden py-20 px-4 lg:px-8">
			<div class="container mx-auto max-w-3xl">
				<div class="text-center space-y-4 mb-12">
					<h2 class="text-4xl md:text-5xl font-bold text-balance">
						Ready to <span class="text-primary">Take the Stage?</span>
					</h2>
					<p class="text-xl text-muted-foreground text-balance">
						Applications close December 15, 2025. Limited spots available.
					</p>
				</div>

				<PitchForm />
			</div>
		</section>
		<div class="flex flex-col items-center justify-center">
			<div class="flex flex-col items-center justify-center my-40">
				<h2 class="w-fit text-4xl md:text-7xl font-anton font-black uppercase text-balance">
					Convince our<br/> <span class="text-[180px] text-primary">Judges</span>
					<p class="text-xl font-quicksand font-light text-muted-foreground text-balance">
						and set the stage for a successful year
					</p>
				</h2>
			</div>
			<WinnerLaurel classes="w-full my-20" awardLevel="GOLD" title="WINNER" awardSubheader="SynBio Reactor Summit" winnerName="team:_______________" date="2026"/>

		</div>
		

		<PitchCTASection />
</Layout>
