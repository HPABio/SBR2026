---
import Layout from "@/layouts/main.astro";
import Navigation from "@/components/Navigation.astro";
import SponsoringFlyer from "@/components/SponsoringFlyer.astro";
import SponsoringPackages from "@/components/SponsoringPackages.astro";
import OtherSponsors from "@/components/ui/other-sponsors.tsx";
import TeamComponent from "@/components/ui/TeamComponent.astro";
---

<Layout>
	<Navigation />

	<main class="pt-16">
			
			<SponsoringFlyer />
			<!-- <OtherSponsors /> -->
			<SponsoringPackages />
			<section class="hidden py-20 px-4 lg:px-8">
				<div class="container mx-auto max-w-4xl">
					<div class="text-center space-y-4 mb-12">
						<h1 class="text-4xl md:text-5xl font-bold text-balance">
							<span class="text-primary">Sponsor</span> the Summit
						</h1>
						<p class="text-xl text-muted-foreground text-balance">
							Support the next generation of synthetic biology
							innovation
						</p>
					</div>

					<div class="prose prose-invert max-w-none space-y-6">
						<p class="text-lg text-muted-foreground">
							By sponsoring the SynBio Reactor Summit 2026, you're
							investing in the future of synthetic biology. Your
							support enables us to bring together the brightest
							minds in the field and create opportunities for
							groundbreaking innovations.
						</p>

						<h2 class="text-2xl font-bold mt-8 mb-4">
							Sponsorship Tiers
						</h2>

						<div class="space-y-6">
							<div class="border border-border rounded-lg p-6">
								<h3 class="text-xl font-bold mb-2 text-primary">
									Platinum Sponsor
								</h3>
								<ul
									class="list-disc list-inside space-y-2 text-muted-foreground"
								>
									<li>
										Premium booth location at the summit
									</li>
									<li>Keynote speaking opportunity</li>
									<li>
										Logo placement on all marketing
										materials
									</li>
									<li>VIP access to all events</li>
									<li>10 complimentary tickets</li>
								</ul>
							</div>

							<div class="border border-border rounded-lg p-6">
								<h3 class="text-xl font-bold mb-2 text-primary">
									Gold Sponsor
								</h3>
								<ul
									class="list-disc list-inside space-y-2 text-muted-foreground"
								>
									<li>Exhibition booth at the summit</li>
									<li>Workshop hosting opportunity</li>
									<li>
										Logo placement on website and program
									</li>
									<li>Access to networking events</li>
									<li>5 complimentary tickets</li>
								</ul>
							</div>

							<div class="border border-border rounded-lg p-6">
								<h3 class="text-xl font-bold mb-2 text-primary">
									Silver Sponsor
								</h3>
								<ul
									class="list-disc list-inside space-y-2 text-muted-foreground"
								>
									<li>Logo placement on website</li>
									<li>Social media recognition</li>
									<li>Access to networking events</li>
									<li>2 complimentary tickets</li>
								</ul>
							</div>
						</div>

						<h2 class="text-2xl font-bold mt-8 mb-4">
							Why Sponsor?
						</h2>
						<ul
							class="list-disc list-inside space-y-2 text-muted-foreground"
						>
							<li>
								Connect with the most promising synthetic
								biology startups
							</li>
							<li>
								Build brand awareness in the synthetic biology
								community
							</li>
							<li>
								Access to exclusive networking opportunities
							</li>
							<li>
								Support innovation and entrepreneurship in
								synthetic biology
							</li>
							<li>
								Position your organization as a leader in the
								field
							</li>
						</ul>

						<h2 class="text-2xl font-bold mt-8 mb-4">
							Custom Sponsorship Packages
						</h2>
						<p class="text-muted-foreground">
							We also offer custom sponsorship packages tailored
							to your organization's specific needs and goals.
							Contact us to discuss how we can create a
							sponsorship package that works for you.
						</p>

						<div class="mt-8">
							<a
								href="mailto:sbr@ga-sb.de"
								class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm transition-all bg-primary text-primary-foreground hover:bg-primary/90 border-2 border-primary font-semibold px-6 py-3"
							>
								Become a Sponsor
							</a>
						</div>
					</div>
				</div>
			</section>
			<div class=" w-full flex flex-col justify-center mb-32">
				<TeamComponent />
			</div>
		</main>
</Layout>
