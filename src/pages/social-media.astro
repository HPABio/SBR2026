---
import { Image } from 'astro:assets';
import Layout from '@/layouts/main.astro';
import type { Props as SocialMediaProps } from 'astro';
import ImAttendingSBR2026 from '@/assets/Other/socialMedia/I_am_Attending_SBR2026.png';
import SBRLogo from '@/assets/SBR2026-Favicon-lg.png';
import AdrianFriedrich from "@/assets/ExportWP/advisors/Advisor_AF_.png";
interface Props extends SocialMediaProps {
  class?: string;
}
const { class: classProp, className } = Astro.props;
const classes = classProp || className || "";
---
<Layout>
<section class={`relative py-16 bg-black ${classes}`}>
    <div class="mx-auto max-w-5xl px-6">
        <h2 class="text-5xl font-black font-anton uppercase text-left w-fit">Social Media</h2>
        <p class="text-xl text-muted-foreground max-w-2xl md:max-w-4xl mx-auto text-balance">
            Follow us on our social media platforms to stay up to date with the latest news and updates.
        </p>
        <div class="flex flex-col gap-4 items-center justify-center my-44">
          <h3 class="text-xl font-bold font-anton uppercase text-center w-fit">Social Media Post</h3>
            <div class="bg-background rounded-xl p-4 border-2 border-red-500 relative aspect-square">
                <Image src={ImAttendingSBR2026} alt="Im Attending SBR2026" width={600} height={1200} class="w-full h-full object-contain" />
                <div class="absolute top-1/2 left-1/2 -translate-x-[50%] -translate-y-[50%] w-full h-full bg-black/0 z-10"></div>
                <!-- Name Tag -->
                <div class="absolute top-1/2 left-1/2 translate-x-[30%] -translate-y-[115%] 
                w-[200px] bg-green-600/0 border border-green-300 z-10 p-0">
                  <h1 class="text-3xl font-bold font-anton uppercase text-left tracking-relaxed m-0 w-fit
                  bg-linear-to-r from-primary via-yellow-400 to-primary text-transparent bg-clip-text">LAST NAME</h1>
                  <h2 class="text-white text-lg font-bold font-anton uppercase text-left tracking-snug -mt-2">FIRST NAME</h2>
                  <p class="text-white text-sm font-light font-quicksand uppercase text-left tracking-snug -mt-1">AFFILIATION</p>
                </div>
                <!-- Input Image -->
                <div class="w-[105px] h-[161px] absolute top-1/2 left-1/2 
                translate-x-[127%] -translate-y-[30%] bg-green-600/0 border border-green-300 z-10">
                  <Image src={AdrianFriedrich} alt="Input Image" class="h-full object-cover" />
                </div>
                <!-- SBR Logo Sticker -->
                <div class="w-[70px] h-[70px] absolute top-1/2 left-1/2 
                translate-x-[140%] translate-y-[80%] bg-green-600/0 border border-green-300 z-10">
                  <Image src={SBRLogo} alt="SBR Logo" class="w-full h-full object-contain" />
                </div>
                <!-- Slogan Text -->
                <div class="absolute top-8 left-9 translate-x-[0%] translate-y-[0%] 
                w-[400px] bg-green-600/0 border border-green-300 z-10 p-0">
                  <h1 class="text-background text-[5rem] font-bold font-anton uppercase text-left tracking-tight text-nowrap">i'm attending</h1>
                </div>
                
                <!-- Some greetings text -->
                <div class="absolute 
                top-1/2 left-1/2 -translate-x-[160%] translate-y-[350%] bg-green-600/0 border border-green-300 z-10">
                  <p class="text-foreground text-base font-quicksand font-light text-left tracking-relaxed leading-relaxed">
                    www.synbioreactor.de
                  </p>
                  <p class="w-[260px] absolute top-1/2 left-1/2 -translate-x-[27%] -translate-y-[126%] text-muted-foreground text-base font-mono font-semibold text-left tracking-relaxed leading-relaxed">
                    "I'm attending the SBR2026 to learn more about the latest trends in the industry and to network with other professionals."
                  </p>
                </div>



                <div class="absolute top-1/2 left-1/2 -translate-x-[50%] -translate-y-[50%] w-full h-full bg-green-600/0 border border-green-300 z-10"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-[50%] -translate-y-[50%] w-full h-full bg-green-600/0 border border-green-300 z-10"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-[50%] -translate-y-[50%] w-full h-full bg-green-600/0 border border-green-300 z-10"></div>
                <div class="absolute top-1/2 left-1/2 -translate-x-[50%] -translate-y-[50%] w-full h-full bg-green-600/0 border border-green-300 z-10"></div>
            </div>
        </div>
        <div style="position: relative; width: 100%; height: 0; padding-top: 73.3478% padding-bottom: 0; box-shadow: 0 2px 8px 0 rgba(63,69,81,0.16); margin-top: 1.6em; margin-bottom: 0.9em; overflow: hidden border-radius: 8px; will-change: transform;">
 
  <iframe loading="lazy" style="position: absolute; width: 100%; height: 100%; top: 0; left: 0; border: none; padding: 0;margin: 0;"
    src="https://www.canva.com/design/DAG7H763B90/L4tGAjb-xKKoHLnWNuG1pQ/view?embed" allowfullscreen="allowfullscreen" allow="fullscreen">
  </iframe>
</div>
<a href="https:&#x2F;&#x2F;www.canva.com&#x2F;design&#x2F;DAG7H763B90&#x2F;L4tGAjb-xKKoHLnWNuG1pQ&#x2F;view?utm_content=DAG7H763B90&amp;utm_campaign=designshare&amp;utm_medium=embeds&amp;utm_source=link" target="_blank" rel="noopener">SBR2026 meets LSTN Berlin</a> von GASB e.V.
    </div>
</section>
</Layout>


