---
import '../styles/global.css';
import SBRFavicon from '@/assets/SBR2026-Favicon.png';
import ScreenSizeDEVTOOL from '@/components/ui/ScreenSizeDEVTOOL.astro';
import Footer from '@/components/Footer.astro';

//Page Title and Description
interface MainProps {
	content?: {
		title?: string;
		description?: string;
	};
}

const { content = {} }: MainProps = Astro.props;
const title = content.title || "SynBio Reactor Summit 2026";
---

<html lang="en">
	<head>
		{import.meta.env.PROD && (
			<>
				<!-- Google Tag Manager -->
				<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
				new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
				j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
				'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
				})(window,document,'script','dataLayer','GTM-TNZ625T5');</script>
				<!-- End Google Tag Manager -->
			</>
		)}
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={SBRFavicon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>SynBio Reactor Summit 2026</title>
		<meta name="description" content="Berlin's premier synthetic biology startup and investor summit" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=Anton+SC&family=Boldonse&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		{import.meta.env.PROD && (
			<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TNZ625T5"
				height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		)}
		{import.meta.env.DEV && <ScreenSizeDEVTOOL />}
		<slot />
		<Footer />
	</body>
</html>
