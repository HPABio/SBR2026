---
import { SiteVerification, GoogleTagmanager } from '@digi4care/astro-google-tagmanager';
import '../styles/global.css';
import SBRFavicon from '@/assets/SBR2026-Favicon.png';
import ScreenSizeDEVTOOL from '@/components/ui/ScreenSizeDEVTOOL.astro';
import Footer from '@/components/Footer.astro';
import CookieConsent from '@/components/CookieConsent.astro';

//Page Title and Description
interface MainProps {
	content?: {
		title?: string;
		description?: string;
	};
}

const { content = {} }: MainProps = Astro.props;
const title = content.title || "SynBio Reactor Summit 2026";
---

<html lang="en">
	<head>
		<!-- Bootstrap gtag so calls (e.g. consent updates) don't error -->
		<script is:inline>
			window.dataLayer = window.dataLayer || [];
			window.gtag =
				window.gtag ||
				function () {
					window.dataLayer.push(arguments);
				};
		</script>

		{!import.meta.env.DEV && (
			<>
				<SiteVerification id="synbioreactor-de" />
				<script is:inline>
					window.gtag('set', 'linker', { domains: ['tickettailor.com'] });
				</script>
				<GoogleTagmanager id="G-QFBMRL8F28" domain="https://www.googletagmanager.com" container="gmt.js" />
			</>
		)}
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={SBRFavicon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>SynBio Reactor Summit 2026</title>
		<meta name="description" content="Berlin's premier synthetic biology startup and investor summit" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Anton&family=Anton+SC&family=Boldonse&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body>
		{import.meta.env.DEV && <ScreenSizeDEVTOOL />}
		<CookieConsent />
		<slot />
		<Footer />
	</body>
</html>
